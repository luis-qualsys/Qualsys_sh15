<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="res_config_settings_view_form_sale" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale.stock.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]//div[hasclass('app_settings_block')]//div[@name='quotation_order_setting_container']" position="after">
                <h2>iVoy Configuraci√≥n</h2>
                <div class="row mt16 o_settings_container" name="auth_ivoy_div">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="text-muted">
                                Tokent y User name de API iVoy
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-lg-3 o_light_label" string="Auth token Bearer" for="auth_bearer"/>
                                    <field name="auth_bearer"/>
                                </div>
                                <div class="row">
                                    <label class="col-lg-3 o_light_label" string="iVoy User X" for="x_voy_user"/>
                                    <field name="x_voy_user"/>
                                </div>
                                <div class="row">
                                    <label class="col-lg-3 o_light_label" string="Tipo de API" for="api_type"/>
                                    <field name="api_type"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>